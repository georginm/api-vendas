{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*":["modules/*"],
      "@config/*":["config/*"],
      "@shared/*":["shared/*"],
      "@errors/*":["shared/errors/*"],
      "@utils/*":["utils/*"]
    },

    "strict": true,
    "skipLibCheck": true,

    "strictPropertyInitialization": false,

    "resolveJsonModule": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
